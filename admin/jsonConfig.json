                            "filter": false,
                            "sort": false,
                            "default": ""
                        },
                        {
                            "type": "number",
                            "attr": "duration",
                            "width": "20%",
                            "title": {
                                "en": "Duration (sec)",
                                "de": "Dauer (Sek.)",
                                "ru": "Продолжительность (сек)",
                                "pt": "Duração (s)",
                                "nl": "Duur (sec)",
                                "fr": "Durée (sec)",
                                "it": "Durata (sec)",
                                "es": "Duración (seg)",
                                "pl": "Czas trwania (s)",
                                "zh-cn": "持续时间（秒）"
                            },
                            "filter": false,
                            "sort": false,
                            "default": 5
                        }
                    ]
                },
                "type": {
                    "newLine": true,
                    "type": "select",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "options": [
                        {
                            "label": "push",
                            "value": "push"
                        },
                        {
                            "label": "poll",
                            "value": "poll"
                        }
                    ],
                    "default": "push",
                    "label": "Type",
                    "help": "Push changes to device (or poll via web service)",
                    "helpLink": "https://github.com/klein0r/ioBroker.lametric/blob/master/docs/en/my-data-diy.md"
                },
                "webInstance": {
                    "type": "instance",
                    "hidden": "data.type !== 'poll'",
                    "adapter": "web",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Web adapter instance",
                    "help": "Can be used to request the configured data"
                },
                "_webInstanceUrl": {
                    "type": "textSendTo",
                    "hidden": "data.type !== 'poll'",
                    "container": "text",
                    "copyToClipboard": true,
                    "alsoDependsOn": [
                        "webInstance"
                    ],
                    "command": "getPollingUrl",
                    "jsonData": "{\"webInstance\": \"${data.webInstance}\"}",
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Url for My Data (DIY) app"
                }
            }
        }
    }
}